
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="icon" type="image/png" href="~/Images/favicon.ico" />
    <title>.:: Facturación Automática - Suiza Lab ::. - TimeOut</title>
    <link rel="stylesheet" href="~/Content/style-themes.css">
    <link rel="stylesheet" href="~/Content/Site.css">
    <link rel="stylesheet" href="~/plugins/animate-css/animate.min.css">
    <script src="~/Plugins/moment.js/moment.min.js"></script>

    @Scripts.Render("~/bundles/modernizr")

    <script language="javascript" type="text/javascript">history.forward(1) // Evita retroceder</script>
</head>
<body>

    <style type="text/css">
        .minh-100 {
            height: 100vh;
        }

        .material-icons {
            color: #dc3545;
            font-size: 90px;
        }

        #footer {
            bottom: 0;
            width: 100%;
            height: 105px;
            z-index: -100;
            position: absolute;
            background: #ffffff; /* navegadores antiguos */
            background: -moz-linear-gradient(top, #ffffff 0%, #e2e2e2 100%); /* i explorer +6 */
            background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(100%,#e2e2e2)); /* Chrome,Safari4+ */
            background: -webkit-linear-gradient(top, #ffffff 0%,#e2e2e2 100%); /* Chrome10+,Safari5.1+ */
            background: -o-linear-gradient(top, #ffffff 0%,#e2e2e2 100%); /* Opera 11.10+ */
            background: -ms-linear-gradient(top, #ffffff 0%,#e2e2e2 100%); /* IE10+ */
            background: linear-gradient(to bottom, #ffffff 0%,#e2e2e2 100%); /* W3C */
            filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#e2e2e2',GradientType=0 ); /* IE6-9 */
        }

            #footer p {
                text-align: center;
                font-size: 0.85em;
                color: #2c516e;
                font-weight: 600;
            }

            #footer #logo {
                margin: 0 auto;
                width: 200px;
                height: 75px;
            }

        .form-control {
            -webkit-border-radius: 0px !important;
            -moz-border-radius: 0px !important;
            border-radius: 0px !important;
            box-shadow: none;
            line-height: 28px;
        }

            .form-control:focus {
                border-color: #3c8dbc !important;
                box-shadow: none;
            }
    </style>
    <div class="container">
        <div class="row justify-content-center align-items-center minh-100">
            <div class="col-lg-12">
                <div class="text-center">
                    <div>
                        <i class="mdi mdi-alert error" style="font-size:7rem"></i>
                    </div>
                    <h3 class="text-center ">¡La sesión no es válida o ha expirado!</h3>
                    <p class="text-center">
                        <i class="fas fa-info-circle">
                            Por medidas de seguridad, debe iniciar sesión para acceder al sistema.
                        </i>
                    </p>
                    <a class="btn btn-primary" href="~/Login" role="button">Iniciar Sesión</a>
                </div>

            </div>

        </div>
    </div>
    <div id="footer">
        <div id="logo">
            <img src="~/Images/mas-que-un-laboratorio-clinico.png" alt="Suiza Lab">
        </div>
        <p>
            Suiza Lab &copy;
            <span id="lblCopyright">@DateTime.Now.Year</span>.
            Todos los derechos reservados - Call Center 612-666 Anexo 1432
        </p>
    </div>

    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script src="~/Scripts/Site.js"></script>
    <script src="~/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/plugins/perfect-scrollbar/perfect-scrollbar.jquery.min.js"></script>

</body>
</html>
